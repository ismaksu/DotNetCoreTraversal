@model ContactUs
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">İletişim</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="/Default/Index/">Anasayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Bizimle iletişime geçin</h5>
                            <p class="mt-3 mb-4">
                                Merhaba, şikayetlerinizi ve önerileriniz dinlemek için 7/24 telefon numaramızda ve mail 
                                hesaplarımızda her zaman hazırız!
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Email:</h6>
                            <p>
                                <a href="mailto:ismtraversalbusiness@gmail.com">
                                    ismtraversalbusiness@gmail.com
                                </a>
                            </p>
                            <h6 class="mt-4">Bizi Ziyaret Edin:</h6>
                            <p> 78-80 Upper St Giles St. Norwich NR2 1LT United Kingdom.</p>
                            <h6 class="mt-4">Contact:</h6>
                            <p class="margin-top"><a href="tel:+44-255-366-88">+44-255-366-88</a></p>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 mt-lg-0 mt-5 contact-right">
                    <form action="/Contact/Index/" method="post" class="signin-form">
                        <div class="input-grids">
                            <div class="form-group">
                                <input type="text" asp-for="Name" id="w3lName" placeholder="İsminiz*" class="contact-input" />
                            </div>
                            <div class="form-group">
                                <input type="email" asp-for="Mail" id="w3lSender" placeholder="Mail Adresiniz*" class="contact-input" required="" />
                            </div>
                            <div class="form-group">
                                <input type="text" asp-for="Subject" id="w3lSubect" placeholder="Konu*" class="contact-input" />
                            </div>
                        </div>
                        <div class="form-group">
                            <textarea asp-for="MessageBody" id="w3lMessage" placeholder="Mesajınız..*" required=""></textarea>
                        </div>
                        <div class="text-right">
                            <button type="submit" class="btn btn-style btn-primary">İletiyi Gönder</button>
                        </div>
                    </form>
                </div>

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Bulunduğumuz bölge</h5>
                <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d387145.86654334463!2d-74.25818682528057!3d40.70531100753592!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x89c24fa5d33f083b%3A0xc80b8f06e177fe62!2sNew+York%2C+NY%2C+USA!5e0!3m2!1sen!2sin!4v1493028309728"
                        style="border:0" allowfullscreen=""></iframe>
            </div>
        </div>
</section>