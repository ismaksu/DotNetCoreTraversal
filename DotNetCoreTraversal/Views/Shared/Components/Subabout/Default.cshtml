@using EntityLayer.Concrete
@model List<About>
<section class="w3l-bottom py-5">
    <div class="container py-md-4 py-3 text-center">
        <div class="row my-lg-4 mt-4">
            <div class="col-lg-9 col-md-10 ml-auto">
                <div class="bottom-info ml-auto">
                    <div class="header-section text-left">
                        @foreach (var item in Model)
                        {

                            <h3 class="hny-title two">Seyahat, bir insanın bilgisine bilgi katmak için başvurabileceği en iyi çözümlerden birisidir.</h3>
                            <p class="mt-3 pr-lg-5">
                                @item.Description
                            </p>
                        }
                        <a href="~/userPages/about.html" class="btn btn-style btn-secondary mt-5">Okumaya Devam Et</a>
                    </div>



                </div>
            </div>
        </div>
    </div>
</section>