@model UserSignInViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <title>ISM Traversal | Giriş Yap</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/loginPages/Login_v1/images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/loginPages/Login_v1/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/loginPages/Login_v1/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/loginPages/Login_v1/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/loginPages/Login_v1/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/loginPages/Login_v1/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/loginPages/Login_v1/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/loginPages/Login_v1/css/main.css">
    <!--===============================================================================================-->
</head>
<body>

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                <div class="login100-pic js-tilt" data-tilt>
                    <img src="~/loginPages/Login_v1/images/img-01.png" alt="IMG">
                </div>
                <form class="login100-form validate-form" method="post">
                    <div class="d-flex justify-content-center">
                        <a href="/Default/Index/" class="btn btn-outline-success rounded-3"><i class="fa fa-home"></i> &nbsp; Anasayfaya Dön</a>
                    </div>
                    <br />
                    <span class="login100-form-title">
                        <h6>ISM Traversal</h6><br />Kullanıcı Girişi
                    </span>

                    <div class="d-flex justify-content-center">
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </div>
                    <br />

                    <span asp-validation-for="Username"></span>
                    <div class="wrap-input100 validate-input" data-validate="Kullanıcı adınızı giriniz..">
                        <input class="input100" type="text" asp-for="Username" placeholder="Kullanıcı Adı">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-envelope" aria-hidden="true"></i>
                        </span>
                    </div>

                    <span asp-validation-for="Password"></span>
                    <div class="wrap-input100 validate-input" data-validate="Şifrenizi giriniz..">
                        <input class="input100" type="password" asp-for="Password" placeholder="Şifre">
                        <span class="focus-input100"></span>
                        <span class="symbol-input100">
                            <i class="fa fa-lock" aria-hidden="true"></i>
                        </span>
                    </div>

                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Giriş Yap
                        </button>
                    </div>

                    <div class="text-center p-t-12">
                        <a class="txt2" href="#">
                            Şifremi / Kullanıcı Adımı Unuttum..
                        </a>
                    </div>

                    <div class="text-center p-t-136">
                        <a class="txt2" href="/Login/Register/">
                            Yeni hesap oluştur
                            <i class="fa fa-long-arrow-right m-l-5" aria-hidden="true"></i>
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>




    <!--===============================================================================================-->
    <script src="~/loginPages/Login_v1/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/loginPages/Login_v1/vendor/bootstrap/js/popper.js"></script>
    <script src="~/loginPages/Login_v1/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/loginPages/Login_v1/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/loginPages/Login_v1/vendor/tilt/tilt.jquery.min.js"></script>
    <script>
        $('.js-tilt').tilt({
            scale: 1.1
        })
    </script>
    <!--===============================================================================================-->
    <script src="~/loginPages/Login_v1/js/main.js"></script>

</body>
</html>