@model AppUser
@{
    ViewData["Title"] = "Users";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="card" style="zoom: 120%;">
    <h4 class="card-header text-center">Kullanıcı Profil Sayfası</h4>
    <div class="card-body">
        @if (Model != null)
        {
            <div class="row justify-content-center">
                <div class="h3"><b>@Model.Name  @Model.Surname</b></div><br />
            </div>
            <div class="row justify-content-center">
                <b>@@@Model.UserName</b>
            </div>
            <div class="row mt-2 justify-content-center">
                <img src="/userImages/@Model.ImageUrl" class="rounded rounded-circle border border-3 shadow" style="height: 150px; width: auto;" />
            </div>
            <div class="row mt-2 justify-content-center">
                <div class="col-12 p-3 col-md-5 border border-primary rounded rounded-3 shadow text-center">
                    <h3 class="text-info">İletişim Bilgileri</h3>
                    <br />
                    <p>
                       <i class="la la-phone"></i>: &nbsp; <b>@Model.PhoneNumber</b>
                        <hr />
                        <i class="la la-envelope"></i>: &nbsp; <b>@Model.Email</b>
                    </p>
                </div>
            </div>
        }
        else
        {
            <i class="fa fa-times-circle-o fa-4x text-center text-danger"></i>
            <h2 class="text-center text-danger">Maalesef Aradığınız Kullanıcı Bulunamadı!</h2>
        }

    </div>
</div>