@model List<AppUser>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";

    int sayac = 0;
}

<style>
    td a {
        zoom: 90%;
    }
</style>

<div class="card">
    <h3 class="card-header">Kayıtlı Kullanıcı Listesi</h3>
    <div class="card-body">
        <table class="table table-hover w-auto">
            <thead>
                <tr>
                    <th>#</th>
                    <th> &nbsp; </th>
                    <th>Ad Soyad</th>
                    <th>Kullanıcı Adı</th>
                    <th>Mail Adresi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    string imgUrl = item.ImageUrl != null ? "/userImages/" + item.ImageUrl : "Image URL Not Found!";

                    sayac++;
                    <tr>
                        <th>@sayac</th>
                        <td class="col-sm-1">
                            <img height="50" width="50" src="@imgUrl" class="rounded">
                        </td>
                        <td style="zoom: 90%;" class="col-sm-1">@item.Name @item.Surname</td>
                        <td style="zoom: 90%;">@@@item.UserName</td>
                        <td style="zoom: 90%;">@item.Email</td>
                        <td>
                            <a href="/Admin/User/ReservationHistoryUser/@item.Id/" class="btn btn-outline-info">
                                <i class="bx bx-history"></i>
                                Tur Geçmişi
                            </a>
                            <a href="/Member/Profile/Users/@item.UserName" class="btn btn-outline-dark">
                                <i class="bx bxs-user-rectangle"></i>
                                Profil
                            </a>
                            <a href="#" class="btn btn-warning">
                                <i class="tf-icon bx bx-revision"></i>
                                Düzenle
                            </a>
                            <a href="#" class="btn btn-danger">
                                <i class="tf-icon bx bx-x-circle"></i>
                                Sil
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <a href="/Login/Register/" class="btn btn-primary">
            <i class='bx bx-user-plus'></i>
            Yeni Kullanıcı Kaydı Yap
        </a>
    </div>
</div>
