@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="card">
    <h3 class="card-header">Tur Rotaları</h3>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Şehir</th>
                    <th>Fiyat</th>
                    <th>Kapasite</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.DestinationID</th>
                        <td>@item.City.CityName</td>
                        <td>$@item.Price</td>
                        <td>@item.Capacity</td>
                        <td>
                            <div class="btn-group">
                                <a href="/Destination/DestinationDetails/@item.DestinationID/" class="btn btn-outline-info">
                                    <i class="tf-icon bx bx-detail"></i>
                                    Sayfayı Görüntüle
                                </a>
                                <a href="/Admin/Destination/UpdateDestination/@item.DestinationID/" class="btn btn-warning">
                                    <i class="tf-icon bx bx-revision"></i>
                                    Güncelle
                                </a>
                                <a href="/Admin/Destination/DeleteDestination/@item.DestinationID/" class="btn btn-danger">
                                    <i class="tf-icon bx bx-x-circle"></i>
                                    Sil
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <a href="/Admin/Destination/AddDestination/" class="btn btn-outline-primary">Yeni Rota Ekle</a>
    </div>
</div>