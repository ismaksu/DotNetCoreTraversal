@model List<GetAllDestinationQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="card">
    <h3 class="card-header">CQRS Tur Rotaları</h3>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Şehir</th>
                    <th>Gün - Gece</th>
                    <th>Fiyat</th>
                    <th>Kapasite</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.ID</th>
                        <td>@item.City</td>
                        <td>@item.DayNight</td>
                        <td>$@item.Price</td>
                        <td>@item.Capacity</td>
                        <td>
                            <a href="/Admin/DestinationCQRS/GetDestination/@item.ID" class="btn btn-outline-warning">Güncelle</a>
                            <a href="/Admin/DestinationCQRS/DeleteDestination/@item.ID" class="btn btn-outline-danger">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <br />
        <a href="/Admin/DestinationCQRS/AddDestination/" class="btn btn-primary">Yeni Rota Ekle</a>
    </div>
</div>