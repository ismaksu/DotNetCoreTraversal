@model CreateRoleViewModel 
@{
    ViewData["Title"] = "CreateRole";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="card">
    <div class="card-header"><h3>Yeni Rol Ekleme Sayfası</h3></div>
    <div class="card-body">
        <form method="post">
            <label>Rol Adı</label>
            <input type="text" class="form-control" placeholder="Rol Adını Giriniz.." asp-for="RoleName"/>
            <br />
            <button type="submit" class="btn btn-success"><i class="bx bx-plus-circle"></i>&nbsp;Rol Eklemesini Yap</button>
        </form>
    </div>
</div>

