@model List<GetAllGuideQueryResult>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminDashboardLayout.cshtml";
}

<div class="card">
    <h4 class="card-header">MediatR ile Rehber Listeleme</h4>
    <div class="card-body">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Rehber Görseli</th>
                    <th>Rehber Adı</th>
                    <th>Rehber Açıklaması</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@item.GuideID</th>
                        <td><img class="rounded rounded-circle shadow" width="75" height="75" style="object-fit: contain;" src="/userImages/@item.Image" /></td>
                        <td>@item.Name</td>
                        <td>
                            @if (item.Description.Length >= 45)
                            {
                                @item.Description.Substring(0, item.Description.Substring(0, 45).LastIndexOf(" "))<b>..</b>
                            }
                            else
                            {
                                @item.Description
                            }
                        </td>
                        <td>
                            <a href="/Admin/GuideMediatR/GetGuide/@item.GuideID" class="btn btn-outline-warning"><i class="tf-icon bx bx-pencil"></i>&nbsp;Düzenle</a>
                            <a href="#" class="btn btn-outline-danger"><i class="tf-icon bx bx-x-circle"></i>&nbsp;Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a href="/Admin/GuideMediatR/AddGuide/" class="btn btn-primary"><i class="bx bx-plus-circle"></i>&nbsp;Yeni Rehber Ekle</a>
    </div>
</div>